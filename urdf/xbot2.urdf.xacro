<?xml version="1.0"?>
<robot xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
  xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
  xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="xbot2_base">
  <link name="base_footprint"/>
  <joint name="base_footprint_to_base" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin  xyz="0 0 0.13" rpy="0 0 0" />
      <mass value="25.0" />
      <inertia ixx=".734" ixy="0" ixz="0" iyy=".734" iyz=".0" izz=".156" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://xbot2_description/meshes/base_link.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://xbot2_description/meshes/base_link.dae" />
      </geometry>
    </collision>
  </link>

  <link name="laser_mount_link"/>
  <joint name="base_to_laser" type="fixed">
    <axis rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="laser_mount_link"/>
    <origin rpy="0 3.1416 3.1416" xyz=".148 0 .253"/>
  </joint>


  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 -1.5708"/>
      <geometry>
        <mesh filename="package://xbot2_description/meshes/wheel.dae" />
      </geometry>
    </collision>
    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 -1.5708"/>
      <geometry>
        <mesh filename="package://xbot2_description/meshes/wheel.dae" />
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 -1.5708"/>
      <mass value="1.5"/>
      <cylinder_inertia m="1.5" r="0.09" h="0.05"/>
      <inertia ixx=".00335" ixy="0" ixz="0" iyy=".006" iyz="0" izz=".00335" />
    </inertial>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <origin xyz="0 0.25 .0953" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 1.5708 "/>
      <geometry>
        <mesh filename="package://xbot2_description/meshes/wheel.dae" />
      </geometry>
    </collision>
    <visual name="right_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <geometry>
        <mesh filename="package://xbot2_description/meshes/wheel.dae" />
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.5708"/>
      <mass value="1.5"/>
      <cylinder_inertia m="1.5" r="0.09" h="0.05"/>
      <inertia ixx=".00335" ixy="0" ixz="0" iyy=".006" iyz="0" izz=".00335" />
    </inertial>
  </link>

  <joint type="continuous" name="right_wheel_hinge">
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <origin xyz="0 -0.25 .0953" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <link name="yaw_platform">
    <inertial>
      <origin  xyz="0 0 0" rpy="0 0 0" />
      <mass value=".11" />
      <inertia ixx="0.000826" ixy="0" ixz="0" iyy="0.0009211" iyz="0" izz="0.0002601" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.5708" />
      <geometry>
        <mesh filename="package://xbot2_description/meshes/yaw_platform.dae" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.5708" />
      <geometry>
        <mesh filename="package://xbot2_description/meshes/yaw_platform.dae" />
      </geometry>
    </collision>
  </link>

  <joint name="base_to_yaw_platform" type="revolute">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="yaw_platform"/>
    <origin rpy="0 0 0" xyz="0 0 1.07"/>
    <limit effort="100" velocity="100" lower="-1.57" upper="1.57" />
  </joint>

